<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="confirmation_signature_button" inherit_id="website_sale.confirmation">
        <xpath expr="//div[@id='oe_structure_website_sale_confirmation_2']" position="after">
            <div class="row mt-4 mb-5" t-if="order and order.state in ('draft', 'sent', 'sale')">
                <div class="col-12 col-lg-8 mx-auto">
                    <div class="card border-0 shadow-sm" style="border-radius: 12px; overflow: hidden;">
                        <div class="card-body p-4 text-center" style="background: linear-gradient(to right, #ffffff, #f8f9fa);">
                            <div class="mb-3">
                                <span class="fa-stack fa-2x" style="color: #00A09D;">
                                    <i class="fa fa-circle fa-stack-2x" style="opacity: 0.1;"></i>
                                    <i class="fa fa-pencil-square-o fa-stack-1x"></i>
                                </span>
                            </div>
                            <h3 class="mb-2" style="font-weight: 700; color: #2c3e50;">¡Último paso!</h3>
                            <p class="text-muted mb-4" style="font-size: 1.1rem;">
                                Para formalizar tu suscripción, necesitamos que revises los detalles y firmes digitalmente el contrato.
                            </p>
                            <a t-att-href="order.get_portal_url()" class="btn btn-primary btn-lg px-5 py-3 shadow" style="border-radius: 8px; font-weight: 600; letter-spacing: 0.5px;">
                                <i class="fa fa-check-circle me-2"></i> Continuar para Aceptar y Firmar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>