<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_microsaas_form" model="ir.ui.view">
        <field name="name">account.move.microsaas.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">

                <!-- Campo invisible necesario para condiciones del botón renovar -->
                <field name="es_factura_renovacion" invisible="1"/>

                <!-- Botón Crear Suscripción: solo cuando no hay suscripciones aún y no es renovación -->
                <button name="action_crear_suscripcion" type="object"
                        class="oe_stat_button" icon="fa-plus-circle"
                        invisible="move_type != 'out_invoice' or payment_state != 'paid' or subscription_count &gt; 0 or es_factura_renovacion == True">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Crear Suscripción</span>
                    </div>
                </button>

                <!-- Botón Ver Suscripciones: solo cuando hay suscripciones vinculadas -->
                <button name="action_ver_suscripciones" type="object"
                        class="oe_stat_button" icon="fa-refresh"
                        invisible="subscription_count == 0">
                    <field name="subscription_count" widget="statinfo" string="Suscripciones"/>
                </button>

                <!-- Botón Renovar Suscripción: aparece cuando:
                     - Es factura de cliente
                     - Está pagada
                     - No tiene suscripciones propias (es factura de renovación)
                     - Aún no fue usada para renovar -->
                <button name="action_renovar_suscripcion" type="object"
                        class="oe_stat_button" icon="fa-refresh"
                        invisible="move_type != 'out_invoice' or payment_state != 'paid' or subscription_count &gt; 0 or es_factura_renovacion == True">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Renovar Suscripción</span>
                    </div>
                </button>

            </xpath>
        </field>
    </record>
</odoo>