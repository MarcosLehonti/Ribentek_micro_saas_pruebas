<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_move_form_crear_instancia_inherit" model="ir.ui.view">
        <field name="name">account.move.form.crear.instancia.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <!-- Agregar campos invisibles para usar en condiciones -->
            <xpath expr="//header" position="inside">
                <field name="instancia_count" invisible="1"/>
                <field name="es_renovacion" invisible="1"/>  <!-- ← nuevo -->
            </xpath>
            
            <!-- Agregar botones en el header -->
            <xpath expr="//header/button[@name='button_cancel']" position="after">
                
                <!-- Botón CREAR INSTANCIA (cuando NO existe y NO es renovación) -->
                <button name="action_crear_instancia" 
                        string="Crear instancia" 
                        type="object" 
                        class="btn-primary"
                        invisible="move_type != 'out_invoice' or payment_state != 'paid' or instancia_count > 0 or es_renovacion == True"
                        help="Crear nueva instancia Docker para este cliente"/>
                
                <!-- Botón VER INSTANCIA (cuando YA existe) -->
                <button name="action_ver_instancias" 
                        string="Ver Instancia" 
                        type="object" 
                        class="btn-success"
                        invisible="move_type != 'out_invoice' or instancia_count == 0"
                        help="Ver instancia(s) creada(s) desde esta factura"/>
                        
            </xpath>
            
            <!-- OPCIONAL: Pestaña para ver instancias relacionadas -->
            <xpath expr="//notebook" position="inside">
                <page string="Instancias Docker" invisible="move_type != 'out_invoice' or instancia_count == 0">
                    <field name="instancia_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="state"/>
                            <field name="instance_url" widget="url"/>
                            <field name="http_port"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            
        </field>
    </record>
    
</odoo>