<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_micro_saas_customers" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'default_is_company': True}</field>
    </record>

    <record id="action_micro_saas_invoices" model="ir.actions.act_window">
        <field name="name">Facturas</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
        <field name="context">{'default_move_type': 'out_invoice'}</field>
    </record>

    <record id="action_micro_saas_payments" model="ir.actions.act_window">
        <field name="name">Pagos</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('payment_type', '=', 'inbound')]</field>
        <field name="context">{'default_payment_type': 'inbound'}</field>
    </record>

    <record id="action_micro_saas_subscriptions" model="ir.actions.act_window">
        <field name="name">Suscripciones</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('detailed_type', '=', 'service')]</field>
        <field name="context">{'default_detailed_type': 'service'}</field>
    </record>

